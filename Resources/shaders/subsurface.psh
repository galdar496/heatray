// Implement subsurface scattering for an object by utilizing a prefix shader.

rayattribute vec3 color;
rayattribute bool isDiffuseBounce;

void main()
{
    float sigmaT = 0.5;
    rl_InRay.color = exp(-rl_IntersectionT * sigmaT) * rl_InRay.color;
    continueInRay();
}